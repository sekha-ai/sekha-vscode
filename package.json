{
  "name": "sekha-vscode",
  "displayName": "Sekha Memory Controller",
  "description": "Persistent AI memory and context management for VS Code",
  "version": "0.2.0",
  "publisher": "sekha-ai",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/sekha-ai/sekha-vscode"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "ai",
    "memory",
    "context",
    "llm",
    "chatgpt",
    "claude",
    "sekha"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Sekha",
      "properties": {
        "sekha.apiUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "Sekha Controller API URL"
        },
        "sekha.apiKey": {
          "type": "string",
          "default": "",
          "description": "Sekha API Key (minimum 32 characters)",
          "minLength": 32
        },
        "sekha.bridgeUrl": {
          "type": "string",
          "default": "http://localhost:5001",
          "description": "Sekha LLM Bridge API URL (optional)"
        },
        "sekha.autoSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically save conversations"
        },
        "sekha.autoSaveInterval": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "description": "Auto-save interval in minutes"
        },
        "sekha.maxConversationsInTree": {
          "type": "number",
          "default": 100,
          "minimum": 10,
          "maximum": 500,
          "description": "Maximum conversations to show in tree view"
        },
        "sekha.defaultFolder": {
          "type": "string",
          "default": "/vscode",
          "description": "Default folder for saved conversations"
        }
      }
    },
    "commands": [
      {
        "command": "sekha.saveConversation",
        "title": "Sekha: Save Conversation",
        "icon": "$(save)"
      },
      {
        "command": "sekha.search",
        "title": "Sekha: Search Memory",
        "icon": "$(search)"
      },
      {
        "command": "sekha.insertContext",
        "title": "Sekha: Insert Context",
        "icon": "$(insert)"
      },
      {
        "command": "sekha.searchAndInsert",
        "title": "Sekha: Search & Insert",
        "icon": "$(combine)"
      },
      {
        "command": "sekha.aiComplete",
        "title": "Sekha: AI Complete with Memory",
        "icon": "$(sparkle)"
      },
      {
        "command": "sekha.summarizeSelection",
        "title": "Sekha: Summarize Selection",
        "icon": "$(list-tree)"
      },
      {
        "command": "sekha.suggestLabels",
        "title": "Sekha: Suggest Labels",
        "icon": "$(tag)"
      },
      {
        "command": "sekha.refresh",
        "title": "Sekha: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "sekha.viewConversation",
        "title": "Sekha: View Conversation"
      },
      {
        "command": "sekha.openSettings",
        "title": "Sekha: Open Settings",
        "icon": "$(settings-gear)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sekha",
          "title": "Sekha Memory",
          "icon": "$(database)"
        }
      ]
    },
    "views": {
      "sekha": [
        {
          "id": "sekhaExplorer",
          "name": "Conversations",
          "contextualTitle": "Sekha Memory",
          "icon": "images/icon.png"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "sekha.refresh",
          "when": "view == sekhaExplorer",
          "group": "navigation"
        },
        {
          "command": "sekha.search",
          "when": "view == sekhaExplorer",
          "group": "navigation"
        },
        {
          "command": "sekha.searchAndInsert",
          "when": "view == sekhaExplorer",
          "group": "navigation"
        },
        {
          "command": "sekha.openSettings",
          "when": "view == sekhaExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "sekha.viewConversation",
          "when": "view == sekhaExplorer && viewItem == conversation",
          "group": "inline"
        }
      ],
      "editor/context": [
        {
          "command": "sekha.saveConversation",
          "group": "sekha",
          "when": "editorTextFocus"
        },
        {
          "command": "sekha.insertContext",
          "group": "sekha",
          "when": "editorTextFocus"
        },
        {
          "command": "sekha.aiComplete",
          "group": "sekha",
          "when": "editorTextFocus"
        },
        {
          "command": "sekha.summarizeSelection",
          "group": "sekha",
          "when": "editorHasSelection"
        }
      ],
      "commandPalette": [
        {
          "command": "sekha.saveConversation"
        },
        {
          "command": "sekha.search"
        },
        {
          "command": "sekha.searchAndInsert"
        },
        {
          "command": "sekha.insertContext"
        },
        {
          "command": "sekha.aiComplete"
        },
        {
          "command": "sekha.summarizeSelection"
        },
        {
          "command": "sekha.suggestLabels"
        },
        {
          "command": "sekha.refresh"
        }
      ]
    },
    "keybindings": [
      {
        "command": "sekha.saveConversation",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorTextFocus"
      },
      {
        "command": "sekha.search",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f"
      },
      {
        "command": "sekha.searchAndInsert",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "sekha.insertContext",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i",
        "when": "editorTextFocus"
      },
      {
        "command": "sekha.aiComplete",
        "key": "ctrl+shift+k",
        "mac": "cmd+shift+k",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run tests/integration",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.0.8",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^10.0.0",
    "happy-dom": "^20.0.11",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.15.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@sekha/sdk": "file:../sekha-js-sdk"
  },
  "overrides": {
    "glob": "^11.0.0",
    "inflight": "npm:@minimatch/inflight@^1.0.0",
    "rimraf": "^6.0.1"
  },
  "license": "AGPL-3.0"
}
